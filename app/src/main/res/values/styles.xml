<resources>

    <!-- Base application theme. -->
    <style name="LeetHub" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/background_super_dark</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LeetHub.Home">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/background_super_dark</item>
    </style>

    <style name="LeetHub.ProblemDetail">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/background_super_dark</item>
    </style>

    <style name="LeetHub.Problem">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/background_super_dark</item>
    </style>

    <style name="LeetHub.Topics">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LeetHub.Difficulty">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LeetHub.SearchView">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/md_light_background</item>
    </style>

    <style name="LeetHub.Discuss">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/md_light_background</item>
    </style>

    <style name="LeetHubOverlay" parent="@android:style/ThemeOverlay.Material.ActionBar"></style>

    <style name="Widget.LeetHub.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="SearchViewTheme" parent="LeetHubOverlay">
        <item name="android:colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.LeetHub.SearchView</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="LeetHubLightOverlay" parent="@android:style/ThemeOverlay.Material.Light"></style>

    <style name="Widget.LeetHub" parent="android:Widget"></style>

    <style name="Widget.LeetHub.HomeToolbar" parent="Widget.LeetHub.Toolbar.SmallCapsTitle">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="colorControlNormal">@color/background_super_dark</item>
    </style>

    <style name="Widget.LeetHub.Toolbar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="android:theme">@style/LeetHubLightOverlay</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="colorControlNormal">@color/background_super_dark</item>
    </style>

    <style name="Widget.LeetHub.Toolbar.SmallCapsTitle">
        <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

</resources>
